    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "exclude": ["node_modules", ".build", ".serveless", "**/tests/**"]
}